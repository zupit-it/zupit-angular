{
  "name": "ngx-form",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ngx-form/src",
  "prefix": "zupit-it",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:ng-packagr-lite",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "packages/ngx-form/ng-package.json"
      },
      "configurations": {
        "production": {
          "tsConfig": "packages/ngx-form/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "packages/ngx-form/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          {
            "command": "npx nx format:check --projects ngx-form"
          }
        ],
        "parallel": false
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "packages/ngx-form/**/*.ts",
          "packages/ngx-form/**/*.html",
          "packages/ngx-form/package.json"
        ]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/ngx-form/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "release": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "postTargets": ["ngx-form:release:github", "ngx-form:publish"],
        "push": true
      }
    },
    "release:github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "publish": {
      "executor": "ngx-deploy-npm:deploy",
      "options": {
        "access": "public",
        "buildTarget": "production"
      }
    }
  }
}
